!!! XML
!!! 1.1
%html
  %head
    =stylesheet_link_tag 'master'
    =javascript_include_tag "jquery.js"
    =javascript_include_tag "jquery-ui.js"
    =javascript_include_tag "jquery.form.js"
    =javascript_include_tag "jquery.inspect.js"
    =javascript_include_tag "jquery.fancyzoom.js"
    =javascript_include_tag "flowplayer.js"
    =javascript_tag "var HOST = '#{request.host}:#{request.port}'; '#{form_authenticity_token}';var AUTH_TOKEN = '#{form_authenticity_token}';"
    -if current_user 
      =javascript_tag "var CURRENT_USER = '#{current_user.id}';"
    =javascript_include_tag "application.js"
    =yield :head
    %title
      Fassets
      =yield :title
  %body
    #header
      %em
        =link_to "FASSETS", "/"
      =catalog_selector
      =render :partial => "shared/session"
    %h1=yield :h1
    #container
      =yield :layout
      .clear
    =render :partial => "shared/tray"
    #footer
      Facetted Asset Management System