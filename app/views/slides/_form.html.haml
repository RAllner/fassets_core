%p
  %label{:for => 'title'} Title:
  =form.text_field :title
%p
  %label{:for => 'template'} Template:
  =select(:slide, :template, TemplateManager.inner_templates(@presentation ? @presentation.template : presentation.template ))
-if @presentation
  %p
    %label{:for => 'topic'} Topic:
    =select(:topic, :topic_id, options_from_collection_for_select(@presentation.topics,"id","title", @slide.topic_id))
