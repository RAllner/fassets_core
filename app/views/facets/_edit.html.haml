=content_for :h1 do
  #type
    %small Catalog
    Facet
  #title
    %small=link_to @catalog.title, catalog_path(@catalog)
    =@facet.caption
  #action
    =button_to "Delete", catalog_facet_path(@catalog, @facet), :method => :delete, :onclick => "return confirm('Are you sure?')", class: "btn"

=form_for [@catalog, @facet], :url => catalog_facet_path(@catalog,@facet) do |f|
  =render :partial => "form", :object => f
  =submit_tag "Save", class: "btn btn-success"

=render "labels/sidebar"