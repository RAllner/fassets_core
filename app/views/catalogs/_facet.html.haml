.facet
  .caption{:class => facet.color}
    -if logged_in?
      =link_to facet.caption, edit_catalog_facet_path(@catalog, facet)
    -else
      =facet.caption
  %ul{:class => "#{facet.color}_lite"}
    -facet.labels.each do |label|
      -if @counts[label.id.to_s] && !@filter.include?(label.id)
        %li.label
          =link_to label.caption.gsub(' ', "&nbsp;"), catalog_path(@catalog, :filter => @filter.to_query_include(label.id))
          -if @counts[label.id.to_s] > 1
            %span.count="#{@counts[label.id.to_s]}&#215"
    %li.clear
